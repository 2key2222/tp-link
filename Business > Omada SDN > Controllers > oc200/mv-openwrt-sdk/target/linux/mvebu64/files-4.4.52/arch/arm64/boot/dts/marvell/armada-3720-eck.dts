/dts-v1/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include "armada-372x.dtsi"

/ {
	model = "Marvell Armada 3720 ECK Board";
	compatible = "marvell,armada-3720-eck", "marvell,armada3720", "marvell,armada3710";

	chosen {
		stdout-path = "serial0:115200n8";
	};

	memory {
		device_type = "memory";
		reg = <0x00000000 0x00000000 0x00000000 0x20000000>;
	};

	soc {
		internal-regs {
			spi0: spi@10600 {
				status = "okay";

				spi-flash@0 {
					#address-cells = <1>;
					#size-cells = <1>;
					compatible = "jedec,spi-nor";
					reg = <0>; /* Chip select 0 */
					spi-max-frequency = <104000000>;
					m25p,fast-read;

					pinctrl-names = "default";
					pinctrl-0 = <&spi0_pins &spi_quad_pins>;
				};
			};
			
			uart0: serial@12000 {
				status = "okay";
			};

			i2c0: i2c@11000 {
				status = "okay";
			};

			i2c1: i2c@11080 {
				status = "okay";
			};

			reg_avs: avs@11500 {
				status = "okay";
			};

			spinctrl: south-bridge-pinctrl@18830 {
				system_led_pins: system-led-pins {
					marvell,pins = "mpp1";
					marvell,function = "gpio";
				};

				system_reset_pins: system-reset-pins {
					marvell,pins = "mpp4";
					marvell,function = "gpio";
				};
			};

			eth0: ethernet@30000 {
				phy-mode = "mii";
				status = "okay";
				buffer-manager = <&bm>;
				bm,pool-long = <1>;
				bm,pool-short = <3>;
				fixed-link {
					speed = <100>;
					full-duplex;
				};
			};

			mdio: mdio@32004 {
				switch0: switch@0 {
					compatible = "marvell,mv88e6085";
					reg = <0>;

					mdio@0 {
						#address-cells = <1>;
						#size-cells = <0>;

						phy1: phy1@1 {
							reg = <0>;
						};
						phy2: phy2@2 {
							reg = <1>;
						};
					};
				};
			};

			u3d@50000 {
				status = "disabled";
				phys = <&a3700_comphy 0 COMPHY_USB3>;
				phy-names = "usb";
			};

			udc@54100 {
				status = "disabled";
				phys = <&utmi_usb32>;
				phy-names = "usb";
			};

			usb3@58000 {
				compatible = "generic-xhci";
				status = "okay";
				phys = <&utmi_usb32>, /* utmi usb32 dedicated phy */
				       <&a3700_comphy 0 COMPHY_USB3>; /* usb3 comphy */
				phy-names = "usb2", "usb3";
			};

			usb@5e000 {
				status = "okay";
				phys = <&utmi_usb2>;
				phy-names = "usb";
			};

			utmi_usb32: utmi@5d000 {
				status = "okay";
			};

			utmi_usb2: utmi@5f000 {
				status = "okay";
			};

			sdhci1: sdhci@d0000 {
				wp-inverted;
				bus-width = <4>;
				cd-gpios = <&gpio_nb 3 GPIO_ACTIVE_LOW>;
				no-1-8-v;
				vqmmc-supply = <&vcc_sd_reg1>;
				marvell,pad-type = "sd";
				status = "okay";

				pinctrl-names = "default";
				pinctrl-0 = <&sdio_pins &cd_pins>;
			};

			sdhci0: sdhci@d8000 {
				marvell,pad-type = "fixed-1-8v";
				non-removable;
				bus-width = <8>;
				cap-mmc-highspeed;
				max-frequency = <52000000>;
				marvell,xenon-emmc;
				marvell,xenon-broken-hs200;
				marvell,xenon-tun-count = <9>;
				status = "okay";

				pinctrl-names = "default";
				pinctrl-0 = <&mmc_pins>;
				#address-cells = <1>;
				#size-cells = <0>;
				mmccard: mmccard@0 {
					compatible = "mmc-card";
					reg = <0>;
				};
			};

			vcc_sd_reg1: regulator@0 {
				compatible = "regulator-gpio";
				regulator-name = "vcc_sd1";
				regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <3300000>;
				regulator-boot-on;

				gpios = <&gpio_nb 4 GPIO_ACTIVE_HIGH>;
				gpios-states = <0>;
				states = <1800000 0x1
					  3300000 0x0>;

				enable-active-high;
			};

			eip97: eip97@90000 {
				status = "okay";
			};
		};
	};
	dsa@0 {
		compatible = "marvell,dsa";
		dsa,ethernet = <&eth0>;
		dsa,mii-bus = <&mdio>;
		#address-cells = <2>;
		#size-cells = <0>;

		switch@0 {
				#address-cells = <1>;
				#size-cells = <0>;
				reg = <0 0>;

				port@0 {
						reg = <0>;
						label = "cpu";
						fixed-link {
							speed = <100>;
							full-duplex;
						};
				};

				port@1 {
						reg = <1>;
						label = "lan0";
						phy-handle = <&phy1>;
				};

				port@2 {
						reg = <2>;
						label = "lan1";
						phy-handle = <&phy2>;
				};
		};
	};

	gpio-leds {
		compatible = "gpio-leds";
		pinctrl-0 = <&system_led_pins>;
		pinctrl-names = "default";

		system-led {
			label = "system-led";
			gpios = <&gpio_sb 1 GPIO_ACTIVE_HIGH>;
			default-state = "off";
		};
	};

	gpio-keys {
		compatible = "gpio-keys";
		pinctrl-0 = <&system_reset_pins>;
		pinctrl-names = "default";

		reset-button {
			label = "reset";
			linux,code = <KEY_RESTART>;
			gpios = <&gpio_sb 4 GPIO_ACTIVE_LOW>;
		};
	};
};
