From 39995ede93ac01ad17b82c8cec88ea125c7fbf98 Mon Sep 17 00:00:00 2001
From: Yehuda Yitschak <yehuday@marvell.com>
Date: Wed, 30 Mar 2016 16:12:35 +0300
Subject: [PATCH 0285/2241] pci: msi: enable MSI interrupts on CP-110 pci

The change is made in 7040-A0 files since MSI interrupts
are not supported in AP806-Z1

Change-Id: I13f9c8af0d1a4b8e9d4ca071be3d2eb3356a067e
Signed-off-by: Yehuda Yitschak <yehuday@marvell.com>
Reviewed-on: http://vgitil04.il.marvell.com:8080/28670
Tested-by: Star_Automation <star@marvell.com>
Reviewed-by: Shadi Ammouri <shadi@marvell.com>
---
 arch/arm64/boot/dts/marvell/armada-7040.dtsi         | 12 ++++++++++++
 arch/arm64/boot/dts/marvell/armada-cp110-master.dtsi |  3 ---
 2 files changed, 12 insertions(+), 3 deletions(-)

diff --git a/arch/arm64/boot/dts/marvell/armada-7040.dtsi b/arch/arm64/boot/dts/marvell/armada-7040.dtsi
index 8bc3294..3d0d720 100644
--- a/arch/arm64/boot/dts/marvell/armada-7040.dtsi
+++ b/arch/arm64/boot/dts/marvell/armada-7040.dtsi
@@ -52,4 +52,16 @@
 	model = "Marvell Armada 7040";
 	compatible = "marvell,armada7040", "marvell,armada-ap806-quad",
 	             "marvell,armada-ap806";
+
+	cpn-110-master {
+		pcie@0x600000 {
+			msi-parent = <&gic_v2m0>;
+		};
+		pcie@0x620000 {
+			msi-parent = <&gic_v2m0>;
+		};
+		pcie@0x640000 {
+			msi-parent = <&gic_v2m0>;
+		};
+	};
 };
diff --git a/arch/arm64/boot/dts/marvell/armada-cp110-master.dtsi b/arch/arm64/boot/dts/marvell/armada-cp110-master.dtsi
index ffa777e..1c6ab6c 100644
--- a/arch/arm64/boot/dts/marvell/armada-cp110-master.dtsi
+++ b/arch/arm64/boot/dts/marvell/armada-cp110-master.dtsi
@@ -45,7 +45,6 @@
 			#size-cells = <2>;
 			#interrupt-cells = <1>;
 			device_type = "pci";
-			/* msi-parent = <&gic_v2m1>; */
 			dma-coherent;
 
 			bus-range = <0 0xff>;
@@ -67,7 +66,6 @@
 			#size-cells = <2>;
 			#interrupt-cells = <1>;
 			device_type = "pci";
-			/* msi-parent = <&gic_v2m1>; */
 			dma-coherent;
 
 			bus-range = <0 0xff>;
@@ -90,7 +88,6 @@
 			#size-cells = <2>;
 			#interrupt-cells = <1>;
 			device_type = "pci";
-			/* msi-parent = <&gic_v2m2>; */
 			dma-coherent;
 
 			bus-range = <0 0xff>;
