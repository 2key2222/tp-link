From: Yehuda Yitschak <yehuday@marvell.com>
Date: Sun, 21 Feb 2016 14:55:30 +0200
Subject: [PATCH 0145/2241] dts: a7040: add spi chip description and partitions

Change-Id: Iade14034e9ce6ee20c2af718e537c58abb6b0c9a
Signed-off-by: Yehuda Yitschak <yehuday@marvell.com>
---
 arch/arm64/boot/dts/marvell/armada-7040-rz-db.dtsi | 24 ++++++++++++++++++++++
 1 file changed, 24 insertions(+)

diff --git a/arch/arm64/boot/dts/marvell/armada-7040-rz-db.dtsi b/arch/arm64/boot/dts/marvell/armada-7040-rz-db.dtsi
index aa9eecb..4c322d3 100644
--- a/arch/arm64/boot/dts/marvell/armada-7040-rz-db.dtsi
+++ b/arch/arm64/boot/dts/marvell/armada-7040-rz-db.dtsi
@@ -63,4 +63,28 @@
 			};
 		};
 	};
+
+	cpn-110-master {
+		config-space {
+			spi@700680 {
+				spi-flash@0 {
+					#address-cells = <0x1>;
+					#size-cells = <0x1>;
+					compatible = "jedec,spi-nor";
+					reg = <0x0>;
+					spi-max-frequency = <20000000>;
+
+					partition@0 {
+						label = "U-Boot";
+						reg = <0x0 0x200000>;
+					};
+
+					partition@400000 {
+						label = "Filesystem";
+						reg = <0x200000 0xe00000>;
+					};
+				};
+			};
+		};
+	};
 };
